{
    "name": "Quickfire for Chrome Developer Tools",
    "version": "0.2",
    "description": "Integrates the Chrome Developer Tools with Quickfire, an IDE for Chrome",
    "permissions": [
        "contextMenus", "debugger"
    ],
    "devtools_page": "src/devtools.html",
    "background": {
        "page": "src/background.html"
    },
    "content_scripts": [
        {
            "matches": ["http://*.localhost:8080/*", "http://*.localhost:8081/*","http://*.localhost/*", "http://*.pixeljet.net/*"],
            "css": [],
            "js": ["src/content-script.js"]
        }
    ],
    "icons": {
        "128": "images/icon_128.png"
    },

    "manifest_version": 2,
    "minimum_chrome_version": "17"
}
